@model (string UserId, string FullName, string Email, string PhoneNubmer, string RoleName, string RoleId)

<h2>Edit User Role</h2>

<form asp-action="EditUserRole" method="post">
    <div class="form-group">
        <label asp-for="UserId">User ID</label>
        <input asp-for="UserId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="FullName">Full Name</label>
        <input asp-for="FullName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNubmer">Phone Number</label>
        <input asp-for="PhoneNubmer" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="RoleName">Role Name</label>
        <input asp-for="RoleName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="RoleId">Select New Role</label>
        <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control">
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
