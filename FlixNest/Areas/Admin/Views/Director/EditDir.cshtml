@model FlixNest.Models.Director

@{
    ViewData["Title"] = "EditDir";
}

<h1>Chỉnh sửa đạo diễn</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="updateDir">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DirId" />
            <div class="form-group">
                <label asp-for="Fname" class="control-label">Họ đạo diễn</label>
                <input asp-for="Fname" class="form-control" />
                <span asp-validation-for="Fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LName" class="control-label">Tên đạo diễn</label>
                <input asp-for="LName" class="form-control" />
                <span asp-validation-for="LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>  
</div>

<div>
    <a asp-action="Index">Trở về</a>
</div>


