@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";

}

<h1>@ViewData["Title"]</h1>
<section class="normal-breadcrumb set-bg" data-setbg=@Url.Content("~/main/img/normal-breadcrumb.jpg")>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Đăng ký</h2>
                    <p>Chào mừng đến bạn đến với FlixNest.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="signup spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Đăng ký</h3>
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" />
                            <label asp-for="Input.Email"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating" style="margin-top: 20px">
                            <input asp-for="Input.FullName" class="form-control" />
                            <label asp-for="Input.FullName"></label>
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                        <div class="form-floating" style="margin-top: 20px">
                            <input asp-for="Input.Password" class="form-control" aria-required="true" />
                            <label asp-for="Input.Password"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating" style="margin-top: 20px">
                            <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" />
                            <label asp-for="Input.ConfirmPassword"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="site-btn">Đăng ký</button>
                    </form>
                    <h5>Đã có tài khoản? <a href="/Identity/Account/Login"> Đăng nhập</a></h5>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login__social__links">
                    <h3>Login With:</h3>
                    <ul>

                        <li><a asp-controller="Login" asp-action="Login" asp-area="" class="google"><i class="fa fa-google"></i> Sign in With Google</a></li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
