@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
   <!-- Normal Breadcrumb Begin -->
    <section class="normal-breadcrumb set-bg" data-setbg=@Url.Content("~/main/img/normal-breadcrumb.jpg")>
          
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="normal__breadcrumb__text">
                        <h2>Đăng nhập</h2>
                        <p>Chào mừng đến bạn đến với FlixNest.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="login spad">
       
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login__form">
                        <h3>Đăng nhập</h3>
                    <form id="account" method="post">
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating" style="margin-top: 30px">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                            <button type="submit" class="site-btn">Đăng nhập</button>
                        </form>
                        <a href="#" class="forget_pass">Quên mật khẩu?</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login__register">
                        <h3>Không có tài khoản đăng ký ngay!</h3>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="primary-btn">Đăng ký</a>
                    </div>
                </div>
            </div>
            <div class="login__social">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-6">
                        <div class="login__social__links">
                            <span>or</span>
                            <ul>

                            <li><a asp-controller="Login" asp-action="Login"  asp-area="" class="google"><i class="fa fa-google"></i> Sign in With Google</a></li>

                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
